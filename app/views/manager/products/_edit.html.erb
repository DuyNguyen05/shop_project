<div class="modal fade bd-example-modal-lg" id="myModalEdit<% product.id %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4><b>Update Product</b></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
      </div>
    <div class="modal-body">
      <%= form_for [:manager, product], remote: true do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, id: "form-control-color", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :price %>
            <%= f.number_field  :price, class: "form-control",
              id: "form-control-color" ,min: 1 %>
          </div>
          <div class="form-group">
            <%= f.label :sale_price %>
            <%= f.number_field :sale_price, class: "form-control",
              id: "form-control-color", min: 1 %>
          </div>
          <div class="form-group">
            <%= f.label :category %>
            <br>
            <%= f.select :category_ids, options_for_select(product_categories),{} ,class: "form-control", id: "form-control-color" %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control", id: "form-control-description" %>
          </div>
          <div class="form-group">
            <%= f.label :image %>
            <br>
            <%= image_tag product.image_url(:thumb) || "product-details/thumb_anh1" %>
          </div>
          <div class="form-group">
            <%= f.file_field :image %>
          </div>
          <%= f.submit "Update", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
